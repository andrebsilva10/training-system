<!DOCTYPE html>
<html>
<head>
  <%= render "layouts/shared/head" %>
</head>

<body>
<main>

  <div class="flex items-center justify-center min-h-screen">
    <div class="max-w-sm w-full">

      <div class="px-6 py-4">
        <div class="flex justify-center mb-6">
          <%= link_to root_path do %>
            <%= image_tag "cim_logo.png", class: "w-auto h-24" %>
          <% end %>
        </div>

        <h2 class="m-3 text-2xl font-medium text-center text-gray-600 dark:text-gray-200">
          <%= yield(:page_title) %>
        </h2>

        <%= rc "flash/message" %>

        <%= yield %>
      </div>
    </div>
  </div>

</main>
</body>
</html>
