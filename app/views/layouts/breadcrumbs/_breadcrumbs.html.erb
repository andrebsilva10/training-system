<% unless breadcrumbs.empty? %>
    <nav id="breadcrumbs" class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2">

            <% breadcrumbs.each_with_index do |crumb, index| %>
                <% if crumb.link? %>
                    <li class="inline-flex items-center">
                        <%= link_to crumb.path, class: "inline-flex items-center text-sm text-gray-700 hover:text-blue-600" do %>
                            <%= icon(:home, class: 'font-medium w-3 h-3 mr-2') if index == 0 %>
                            <%= crumb.name %>
                        <% end %>
                    </li>
                <% else %>
                    <li aria-current="page">
                        <span class="text-sm font-medium text-gray-500"><%= crumb.name %></span>
                    </li>
                <% end %>

                <% if index < breadcrumbs.size - 1 %>
                    <li> <%= icon(:chevron_right, class: 'w-3 h-3 text-gray-400') %></li>
                <% end %>
            <% end %>

        </ol>
    </nav>
<% end %>