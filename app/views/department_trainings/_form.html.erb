<%= form_with(model: department_training, class: "contents") do |form| %>
  <% if department_training.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(department_training.errors.count, "error") %> prohibited this department_training from being saved:</h2>

      <ul class="list-disc ml-6">
        <% department_training.errors.each do |error| %>
          <li><%= error.full_message %></li>
