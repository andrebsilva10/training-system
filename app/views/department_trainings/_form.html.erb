    <%= form.label :training_id %>
    <%= form.text_field :training_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": department_training.errors[:training_id].none?, "border-red-400 focus:outline-red-600": department_training.errors[:training_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
