<% provide :page_title, @training.title %>

<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="mb-8">
    <!-- Card de informações -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="border-b md:border-b-0 md:border-r border-gray-200 pb-4 md:pb-0 md:pr-4">
          <p class="text-sm text-gray-500 uppercase font-semibold">Descrição</p>
          <p class="mt-1 text-gray-700"><%= @training.description.present? ? @training.description : "Não informada" %></p>
        </div>
        <div class="md:pl-4">
          <p class="text-sm text-gray-500 uppercase font-semibold">Duração</p>
          <p class="mt-1 text-gray-700"><%= @training.duration.present? ? "#{@training.duration} minutos" : "Não informada" %></p>
        </div>
      </div>
    </div>
    
    <% if Current.user.admin? %>
      <!-- Ações administrativas -->
      <div class="flex flex-wrap gap-3 mb-6">
        <%= link_to edit_training_path(@training), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          Editar
        <% end %>
        
        <%= link_to new_training_training_version_path(@training), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Nova Versão
        <% end %>
        
        <%= link_to trainings_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Voltar
        <% end %>
      </div>
    <% end %>
  </div>
  
  <!-- Versões -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">Versões Ativas</h2>
    </div>
    
    <% if @active_versions.any? %>
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Versão</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data de Lançamento</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Validade (dias)</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @active_versions.each do |version| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-center"><%= version.version_number %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center"><%= version.release_date %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center"><%= version.valid_for %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= link_to "Ver", training_training_version_path(@training, version), class: "text-indigo-600 hover:text-indigo-900" %>
                  <% if Current.user.admin? %>
                    | <%= link_to "Editar", edit_training_training_version_path(@training, version), class: "text-indigo-600 hover:text-indigo-900" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-6 text-center text-gray-500">
        <p>Não há versões ativas para este treinamento.</p>
      </div>
    <% end %>
  </div>
  
  <% if @inactive_versions.any? %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800">Versões Inativas</h2>
      </div>
      
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Versão</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data de Lançamento</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @inactive_versions.each do |version| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-center"><%= version.version_number %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center"><%= version.release_date %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="<%= version.status == 'expired' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %> inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium">
                    <%= t("training_version.status.#{version.status}") %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= link_to "Ver", training_training_version_path(@training, version), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
  
  <% if Current.user.admin? %>
    <%= link_to "Gerenciar Atribuições", assign_trainings_path(training_id: @training.id), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 " %>
  <% end %>
</div>