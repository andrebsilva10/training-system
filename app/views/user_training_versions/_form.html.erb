    <%= form.label :due_date %>
    <%= form.date_field :due_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_training_version.errors[:due_date].none?, "border-red-400 focus:outline-red-600": user_training_version.errors[:due_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_training_version.errors[:notes].none?, "border-red-400 focus:outline-red-600": user_training_version.errors[:notes].any?}] %>
