<%= form_with(model: user_training_version, class: "contents") do |form| %>
  <% if user_training_version.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(user_training_version.errors.count, "error") %> prohibited this user_training_version from being saved:</h2>

