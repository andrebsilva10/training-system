  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_training_version.errors[:status].none?, "border-red-400 focus:outline-red-600": user_training_version.errors[:status].any?}] %>
