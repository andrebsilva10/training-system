  <div class="my-5">
    <%= form.label :assigned_at %>
    <%= form.datetime_field :assigned_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_training_version.errors[:assigned_at].none?, "border-red-400 focus:outline-red-600": user_training_version.errors[:assigned_at].any?}] %>
