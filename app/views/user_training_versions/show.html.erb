<% provide :page_title, "Detalhes do Treinamento" %>

<div class="bg-white rounded-lg shadow-md p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">
      <%= @user_training_version.training_version.training.title %>
      <span class="text-lg font-normal text-gray-500 ml-2">
        Versão <%= @user_training_version.training_version.version_number %>
      </span>
    </h1>
    
    <div>
      <% if @user_training_version.user == Current.user %>
        <%= link_to "Voltar para Meus Treinamentos", my_trainings_path, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md bg-indigo-600 hover:bg-indigo-700" %>
      <% elsif Current.user.admin? %>
        <%= link_to "Voltar para Treinamentos do Usuário", user_trainings_path(@user_training_version.user), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md bg-indigo-600 hover:bg-indigo-700" %>
      <% end %>
    </div>
  </div>
  
  <!-- Status do Treinamento -->
  <div class="mb-6">
    <div class="flex flex-wrap gap-4 items-center">
      <!-- Status -->
      <div class="flex items-center">
        <span class="text-gray-700 font-medium mr-2">Status:</span>
        <% status_class = case @user_training_version.status 
                        when "completed" then "bg-green-100 text-green-800" 
                        when "in_progress" then "bg-blue-100 text-blue-800" 
                        when "expired" then "bg-red-100 text-red-800" 
                        else "bg-yellow-100 text-yellow-800" end %>
        <span class="<%= status_class %> px-3 py-1 rounded-full text-sm">
          <%= t("user_training_version.status.#{@user_training_version.status}") %>
        </span>
      </div>
      
      <!-- Obrigatório -->
      <div class="flex items-center">
        <span class="text-gray-700 font-medium mr-2">Tipo:</span>
        <% if @user_training_version.required? %>
          <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm">Obrigatório</span>
        <% else %>
          <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">Opcional</span>
        <% end %>
      </div>
      
      <!-- Usuário -->
      <div class="flex items-center">
        <span class="text-gray-700 font-medium mr-2">Atribuído a:</span>
        <span class="text-gray-900"><%= @user_training_version.user.name %></span>
      </div>
    </div>
  </div>
  
  <!-- Detalhes do treinamento -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="border border-gray-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Atribuído em</h3>
      <p class="text-lg font-medium">
        <%= l(@user_training_version.assigned_at, format: :long) if @user_training_version.assigned_at %>
      </p>
    </div>
    
    <div class="border border-gray-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">
        <%= @user_training_version.started_at ? "Iniciado em" : "Não iniciado" %>
      </h3>
      <p class="text-lg font-medium">
        <%= @user_training_version.started_at ? l(@user_training_version.started_at, format: :long) : "—" %>
      </p>
    </div>
    
    <div class="border border-gray-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">
        <%= @user_training_version.completed_at ? "Concluído em" : "Não concluído" %>
      </h3>
      <p class="text-lg font-medium">
        <%= @user_training_version.completed_at ? l(@user_training_version.completed_at, format: :long) : "—" %>
      </p>
    </div>
    
    <% if @user_training_version.completed_at && @user_training_version.due_date %>
      <div class="border border-gray-200 rounded-lg p-4 <%= @user_training_version.due_date < Date.today ? "border-red-300 bg-red-50" : "" %>">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Válido até</h3>
        <p class="text-lg font-medium">
          <%= l(@user_training_version.due_date, format: :long) %>
          <% if @user_training_version.due_date < Date.today %>
            <span class="block text-sm text-red-600 mt-1">
              Expirado há <%= distance_of_time_in_words(@user_training_version.due_date, Date.today) %>
            </span>
          <% elsif (@user_training_version.due_date - Date.today) < 30 %>
            <span class="block text-sm text-orange-600 mt-1">
              Expira em <%= distance_of_time_in_words(Date.today, @user_training_version.due_date) %>
            </span>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
  
  <!-- Conteúdo do treinamento -->
  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-4">Conteúdo do Treinamento</h2>
    
    <div class="bg-gray-50 rounded-lg p-6 prose max-w-none">
      <% if @user_training_version.training_version.content.present? %>
        <%= @user_training_version.training_version.content %>
      <% else %>
        <p class="text-gray-500 italic">Nenhum conteúdo disponível para este treinamento.</p>
      <% end %>
    </div>
  </div>
  
  <!-- Arquivos do treinamento -->
  <% if @user_training_version.training_version.documents.attached? %>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Materiais de Apoio</h2>
      
      <div class="bg-gray-50 rounded-lg p-4">
        <ul class="divide-y divide-gray-200">
          <% @user_training_version.training_version.documents.each do |document| %>
            <li class="py-3 flex justify-between items-center">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                </svg>
                <span><%= document.filename %></span>
              </div>
              <%= link_to "Download", rails_blob_path(document, disposition: "attachment"), class: "text-indigo-600 hover:text-indigo-900" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- Ações -->
  <div class="mt-8 border-t border-gray-200 pt-6">
    <div class="flex flex-wrap gap-3">
      <% if @user_training_version.pending? && (@user_training_version.user == Current.user || Current.user.admin?) %>
        <%= button_to "Iniciar Treinamento", start_user_training_version_path(@user_training_version), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      <% end %>
      
      <% if @user_training_version.in_progress? && (@user_training_version.user == Current.user || Current.user.admin?) %>
        <%= button_to "Concluir Treinamento", complete_user_training_version_path(@user_training_version), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md bg-green-600 hover:bg-green-700" %>
      <% end %>
      
      <% if Current.user.admin? %>
        <!-- Form para alterar status -->
        <div class="ml-auto flex items-center">
          <%= form_with(url: update_status_user_training_version_path(@user_training_version), method: :patch, class: "flex items-center") do |form| %>
            <%= form.label :status, "Alterar status:", class: "mr-2 text-sm font-medium text-gray-700" %>
            <%= form.select :status, 
                UserTrainingVersion.statuses.keys.map { |s| [t("user_training_version.status.#{s}"), s] }, 
                { selected: @user_training_version.status },
                { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
            <%= form.submit "Salvar", class: "ml-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
          
          <%= button_to "Remover Atribuição", @user_training_version, method: :delete, class: "ml-2 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-gray-50", data: { turbo_confirm: "Tem certeza que deseja remover esta atribuição?" } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Configurações administrativas -->
  <% if Current.user.admin? %>
    <div class="mt-6 border-t border-gray-200 pt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Configurações Administrativas</h3>
      
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between mb-4">
          <div>
            <span class="text-gray-700 font-medium">Status de obrigatoriedade:</span>
            <% if @user_training_version.required? %>
              <span class="ml-2 bg-red-100 text-red-800 text-sm px-2 py-1 rounded">Obrigatório</span>
            <% else %>
              <span class="ml-2 bg-gray-100 text-gray-800 text-sm px-2 py-1 rounded">Opcional</span>
            <% end %>
          </div>
          
          <!-- Formulário com a rota correta -->
          <%= form_with(url: toggle_required_user_training_version_path(@user_training_version), method: :patch) do |f| %>
            <%= f.submit @user_training_version.required? ? "Tornar Opcional" : "Tornar Obrigatório", 
                       class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md bg-indigo-600 hover:bg-indigo-700" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>