<% provide :page_title, "Setores" %>

<div class="max-w-6xl mx-auto px-4 py-8">
  <% if notice.present? %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
      <p><%= notice %></p>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Setores</h1>
    <%= link_to new_department_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium bg-indigo-600 hover:bg-indigo-700" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Novo Setor
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <% if @departments.any? %>
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrição</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @departments.each do |department| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-center">
                  <%= department.name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500 text-center">
                  <%= truncate(department.description, length: 100) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                  <%= link_to "Detalhes", department, class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                  <%= link_to "Editar", edit_department_path(department), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                  <%= button_to "Excluir", department, method: :delete, 
                      form: { class: "inline" },
                      class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer", 
                      data: { turbo_confirm: "Tem certeza que deseja excluir este setor?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-6 text-center text-gray-500">
        <p>Nenhum setor encontrado.</p>
      </div>
    <% end %>
  </div>
</div>