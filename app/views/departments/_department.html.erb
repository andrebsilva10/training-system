<div id="<%= dom_id department %>" class="bg-white rounded-lg shadow-sm p-6">
  <div class="grid grid-cols-1 gap-4">
    <div>
      <h3 class="text-sm font-medium text-gray-500">Nome</h3>
      <p class="mt-1 text-sm font-medium text-gray-900"><%= department.name %></p>
    </div>
    
    <div>
      <h3 class="text-sm font-medium text-gray-500">Descrição</h3>
      <p class="mt-1 text-sm text-gray-700"><%= department.description.presence || "Não informada" %></p>
    </div>
  </div>
</div>