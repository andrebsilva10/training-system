<% provide :page_title, "Editar Versão #{@training_version.version_number} - #{@training.title}" %>

<div class="max-w-3xl mx-auto">
  <h1 class="font-bold text-2xl mb-6">Editar Versão de Treinamento</h1>

  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <%= render "form", training_version: @training_version %>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Detalhes", training_training_version_path(@training, @training_version), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
    <%= link_to "Voltar para o Treinamento", training_path(@training), class: "text-gray-600 hover:text-gray-800 font-medium" %>
  </div>
</div>