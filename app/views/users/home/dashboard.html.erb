<% provide :page_title, t(".title") %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">

  <%= link_to my_trainings_path, class: "block bg-white rounded-lg shadow-md overflow-hidden transition transform hover:shadow-lg hover:-translate-y-1" do %>
    <div class="h-2 bg-blue-600"></div>
    <div class="p-6 mb-4">
      <div class="flex items-center mb-4">
        <div class="bg-blue-100 p-3 rounded-full mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-800">Meus Treinamentos</h3>
      </div>
      <p class="text-gray-600 mb-4">Visualize e gerencie seus treinamentos atribuídos</p>
      <div class="flex justify-end">
        <span class="inline-flex items-center text-sm font-medium text-blue-600">
          Acessar
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </div>
    </div>
  <% end %>

  <%= link_to trainings_path, class: "block bg-white rounded-lg shadow-md overflow-hidden transition transform hover:shadow-lg hover:-translate-y-1" do %>
    <div class="h-2 bg-indigo-600"></div>
    <div class="p-6 mb-4">
      <div class="flex items-center mb-4">
        <div class="bg-indigo-100 p-3 rounded-full mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-800">Catálogo de Treinamentos</h3>
      </div>
      <p class="text-gray-600 mb-4">Explore todos os treinamentos disponíveis no sistema</p>
      <div class="flex justify-end">
        <span class="inline-flex items-center text-sm font-medium text-indigo-600">
          Acessar
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </div>
    </div>
  <% end %>

  <%= link_to users_edit_profile_path, class: "block bg-white rounded-lg shadow-md overflow-hidden transition transform hover:shadow-lg hover:-translate-y-1" do %>
    <div class="h-2 bg-purple-600"></div>
    <div class="p-6 mb-4">
      <div class="flex items-center mb-4">
        <div class="bg-purple-100 p-3 rounded-full mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-800">Meu Perfil</h3>
      </div>
      <p class="text-gray-600 mb-4">Atualize seus dados pessoais e preferências</p>
      <div class="flex justify-end">
        <span class="inline-flex items-center text-sm font-medium text-purple-600">
          Acessar
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </div>
    </div>
  <% end %>
</div>

<% if Current.user.admin? %>
  <h2 class="text-xl font-semibold text-gray-800 mb-6">Administração</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="h-2 bg-green-600"></div>
      <div class="p-6 mb-4">
        <div class="flex items-center mb-4">
          <div class="bg-green-100 p-3 rounded-full mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-800">Gerenciar Treinamentos</h3>
        </div>
        <p class="text-gray-600 mb-4">Adicione ou edite treinamentos no sistema</p>
        <div class="flex space-x-3">
          <%= link_to trainings_path, class: "flex-1 flex justify-center items-center px-4 py-2 bg-green-100 text-green-700 rounded transition hover:bg-green-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            Listar
          <% end %>
          <%= link_to new_training_path, class: "flex-1 flex justify-center items-center px-4 py-2 bg-green-100 text-green-700 rounded transition hover:bg-green-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Novo
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="h-2 bg-orange-600"></div>
      <div class="p-6 mb-4">
        <div class="flex items-center mb-4">
          <div class="bg-orange-100 p-3 rounded-full mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-800">Gerenciar Setores</h3>
        </div>
        <p class="text-gray-600 mb-4">Adicione ou edite setores da empresa</p>
        <div class="flex space-x-3">
          <%= link_to departments_path, class: "flex-1 flex justify-center items-center px-4 py-2 bg-orange-100 text-orange-700 rounded transition hover:bg-orange-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            Listar
          <% end %>
          <%= link_to new_department_path, class: "flex-1 flex justify-center items-center px-4 py-2 bg-orange-100 text-orange-700 rounded transition hover:bg-orange-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Novo
          <% end %>
        </div>
      </div>
    </div>
    
    <%= link_to assign_trainings_path, class: "block bg-white rounded-lg shadow-md overflow-hidden transition transform hover:shadow-lg hover:-translate-y-1" do %>
      <div class="h-2 bg-teal-600"></div>
      <div class="p-6 mb-4">
        <div class="flex items-center mb-4">
          <div class="bg-teal-100 p-3 rounded-full mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-800">Atribuir Treinamentos</h3>
        </div>
        <p class="text-gray-600 mb-4">Atribua treinamentos aos colaboradores ou setores</p>
        <div class="flex justify-end">
          <span class="inline-flex items-center text-sm font-medium text-teal-600">
            Acessar
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </span>
        </div>
      </div>
    <% end %>
    
    <%= link_to users_list_path, class: "block bg-white rounded-lg shadow-md overflow-hidden transition transform hover:shadow-lg hover:-translate-y-1" do %>
      <div class="h-2 bg-red-600"></div>
      <div class="p-6 mb-4">
        <div class="flex items-center mb-4">
          <div class="bg-red-100 p-3 rounded-full mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-800">Gerenciar Usuários</h3>
        </div>
        <p class="text-gray-600 mb-4">Gerencie os usuários do sistema e suas permissões</p>
        <div class="flex justify-end">
          <span class="inline-flex items-center text-sm font-medium text-red-600">
            Acessar
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </span>
        </div>
      </div>
    <% end %>
  </div>
<% end %>